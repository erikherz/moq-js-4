{
	"include": ["./src"],
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"strict": true,
		"composite": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["es2022"],
		"types": ["web", "parcel-bundler"]
	}
}
