{
	"include": ["."],
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"rootDir": ".",
		"outDir": "./dist",
		"declaration": true,
		"strict": true,
		"composite": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"typeRoots": ["../lib/types", "../node_modules/@types"],
		"lib": ["es2022"],
		"types": ["web", "parcel-bundler", "dom-webcodecs", "dom-mediacapture-transform"]
	}
}
