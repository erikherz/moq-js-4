{
	"files": [],
	"compilerOptions": {
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"rootDir": ".",
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"composite": true,
		"declarationMap": true,
		"sourceMap": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"types": [], // Make it explicit, so we don't automatically import @types modules.
		"paths": {
			// Support referencing this dir with ~/src
			"~/src/*": [
				"./*"
			],
		},
		"typeRoots": [
			"./types",
			"../node_modules/@types"
		]
	},
	"references": [
		{
			"path": "./shared"
		},
		{
			"path": "./playback"
		},
		{
			"path": "./broadcast"
		},
		{
			"path": "./worker"
		},
		{
			"path": "./worklet"
		},
		{
			"path": "./transport"
		}
	]
}